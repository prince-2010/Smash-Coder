    <!-- Cources -->
    <!-- A div contain two div which contain one cource each -->
    <!-- 1 div -->

    <div>
        i<% for(let i=0; i < courses.length; i=i+2){ %>
            <div class="container hello my-2 ">
                <div class="row mb-2">
                    <!-- 1st Corces -->
                    <div class="col-md-6">
                        <div
                            class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                            <div class="col p-4 d-flex flex-column position-static">
                                <!-- Topic -->
                                <strong class="d-inline-block mb-2 text-primary"><%=courses[i].name%></strong>
                                <!-- Title -->
                                <h3 class="mb-0"><%=courses[i].title%></h3>
                                <div class="mb-1 text-muted"><%=courses[i].date%></div>
                                <!-- Some content -->
                                <p class="card-text mb-auto"><%=courses[i].description%></p>
                                <!-- Link for the cource -->
                                <a href="<%=courses[i].link%>"
                                    target="blank" class="stretched-link">Start Cource</a>
                            </div>
                            <div class="col-auto d-none d-lg-block">
                                <!-- Image for the cource -->
                                <img class="bd-placeholder-img" width="200" height="250" src="<%=courses[i].image%>" alt="">
                            </div>
                        </div>
                    </div>
                    <!-- 2st Corces -->
                    <div class="col-md-6">
                        <div
                            class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
