                                <!-- Some content -->
                                <p class="mb-auto"><%=courses[i+1].description%>
                                </p>
                                <!-- Link for the cource -->
                                <a href="<%=courses[i+1].link%>"
                                    target="blank" class="stretched-link">Start Cource</a>
                            </div>
                            <div class="col-auto d-none d-lg-block">
                                <!-- Image -->
                                <img class="bd-placeholder-img" width="200" height="250" src="<%=courses[i+1].image%>" alt="">
        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <%}%>
